{
  "display_information": {
    "name": "device database",
    "description": "your friendly neighbourhood bot regarding everything device database!",
    "background_color": "#18bcf2"
  },
  "features": {
    "bot_user": {
      "display_name": "device database",
      "always_online": false
    },
    "slash_commands": [
      {
        "command": "/database-snapshot",
        "url": "https://device-database.eco-dev-aws.openhomefoundation.com/api/v1/callback/vendor/slack/slash-command",
        "description": "download link for database",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": ["incoming-webhook", "commands"]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
